<div class="flex justify-between items-start">
  <div>
    <h3 class="text-lg font-medium text-gray-900">
      <%= link_to station.name, station_path(station), class: "hover:text-indigo-600 transition-colors" %>
    </h3>    
    <p class="text-sm text-gray-500">
      <%= link_to station.address, station.google_maps_url, 
          target: "_blank", 
          class: "hover:text-indigo-600 transition-colors hover:underline",
          title: "View on Google Maps" %>
    </p>
    <div class="mt-2 flex space-x-4 text-sm text-gray-500">
      <% if station.power_output.present? %>
        <p>Power: <%= station.power_output %> kW</p>
      <% end %>
      <p class="<%= station.status_css_class %>">
        <%= station.status %>
      </p>
    </div>
  </div>
  <div class="text-right">
    <% if station.respond_to?(:distance) && station.distance.present? %>
      <p class="text-lg font-medium text-gray-900"><%= number_with_precision(station.distance, precision: 1) %> km</p>
    <% end %>
    <%= link_to "Details", station_path(station), 
        class: "text-sm text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>